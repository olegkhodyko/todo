{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app": ["app/index.ts"],
      "@app/*": ["app/*"],

      "@components": ["components/index.ts"],
      "@components/*": ["components/*"],

      "@config": ["config/index.ts"],
      "@config/*": ["config/*"],

      "@navigation": ["navigation/index.ts"],
      "@navigation/*": ["navigation/*"],

      "@screens": ["screens/index.ts"],
      "@screens/*": ["screens/*"],

      "@src/interfaces": ["src/interfaces/index.ts"],
      "@src/interfaces/*": ["src/interfaces/*"],

      "@utils": ["utils/index.ts"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "types/env.d.ts"]
}
