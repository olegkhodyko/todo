{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app": ["app/index.ts"],
      "@app/*": ["app/*"],

      "@api": ["api/index.ts"],
      "@api/*": ["api/*"],

      "@shared": ["shared/index.ts"],
      "@shared/*": ["shared/*"],

      "@config": ["config/index.ts"],
      "@config/*": ["config/*"],

      "@navigation": ["navigation/index.ts"],
      "@navigation/*": ["navigation/*"],

      "@screens": ["screens/index.ts"],
      "@screens/*": ["screens/*"],

      "@theme": ["theme/index.ts"],
      "@theme/*": ["theme/*"],

      "@interfaces": ["interfaces/index.ts"],
      "@interfaces/*": ["interfaces/*"],

      "@features": ["features/index.ts"],
      "@features/*": ["features/*"],

      "@utils": ["utils/index.ts"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "types/env.d.ts"]
}
